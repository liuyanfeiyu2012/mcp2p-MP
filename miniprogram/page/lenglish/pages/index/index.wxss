/**index.wxss**/
page {
  height: 100vh;
  width: 100vw;
  position: fixed;
  background-color: #f8f8f8;
}
.container {
  height: 100vh;
  width: 100vw;
}
.vvideo {
  height: 100vh;
  width: 100vw;
  position: absolute;
  top: 0;
  left: 0;
  background-color: #f8f8f8;
}
.play-btn {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  height: 128rpx;
  width: 128rpx;
}
.progress {
  position: absolute;
  left: 0;
  bottom: 102rpx;
  height: 4px;
  width: 100vw;
}
.animation-wrapper {
  position: relative;
  height: 100vh;
  width: 100vw;
  background-color: #f8f8f8;
}
.animation-image {
  height: 100vh;
  width: 100vw;
  display: block;
}
.animationPre {
  transform: translateY(-100%);
}

/* 底部区域  */
.footer {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  position: absolute;
  height: 100rpx;
  bottom: 10rpx;
  width: 100%;
}

.icon{
  width: 80rpx;
  height: 80rpx;
}

.icon2 {
  width: 100rpx;
  height: 100rpx;
}

.right-icon {
  margin: 20rpx 20rpx 0rpx;
}

.text {
  color: white;
  width: 100rpx;
  text-align: center;
  margin: 0rpx 20rpx;
}

.share{
  width: 100rpx;
  height: 100rpx;
  background-size: 100rpx 100rpx;
  background-repeat:no-repeat;
  background-image:url(data:image/png;base64,);
}
button[plain]{ border:0 }

.home {
  font-weight: 600;
  color: #f8f8f8;
  letter-spacing:16rpx;
  font-size: 14pt;
}

.me {
  font-weight: 600;
  color: #f8f8f8;
  letter-spacing:16rpx;
  font-size: 14pt;
}

.page-guide{
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 99999;
  background-color: rgba(22, 23, 24, 0.8);
}

.page-guide-image{
  width: 408rpx;
}

.page-guide-text1{
  width: 80%;
  color: #fff;
  font-size: 14pt;
  text-align: center;
}

.page-guide-bottom{
  width:60%;
  font-size:30rpx;
  line-height:72rpx;
  text-align:center;
  border-radius:44rpx;
  border:1px solid #fff;
  margin:10% auto 0 auto;
  color:#fff;
}

/* 右侧区域  */
.tools {
  display: flex;
  position: absolute;
  z-index: 10000;
  right: 5rpx;
  top: 250rpx;
  height: 300px;
  flex-direction: column;
}

/* 头像  */
.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.comments-scoll {
    height: 1200rpx;
}

.comments-all {
    height: 60vh;
    padding: 12rpx;
    background-color: #141414;
    color: #e8e8e8;
}

.face-comments {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
}
.comments-items{
  margin: 8rpx 0rpx;
}

.comments-item{
  display: flex;
  flex-direction: column;
}

.container-comments{
    display: flex;
    align-items: center;
}

.nickname-comments {
    margin-left: 20rpx;
    font-size: 10pt;
}

.nickname-lbl{
    color: #a1a1a1;
}

.date-lbl{
    color: #a1a1a1;
}

.comments-content{
    text-align: left;
    margin-left: 90rpx;
    margin-right: 10rpx;
    padding-bottom: 4rpx;
    border-bottom: solid 2rpx #232323;
    background-color: #141414;
    font-size: 11pt;
}

.comments-replaycontent{
    text-align: left;
    margin-left: 90rpx;
    margin-right: 10rpx;
    padding-bottom: 4rpx;
    color: #a1a1a1;
    background-color: #141414;
    font-size: 10pt;
    font-style: italic;
}

/* 评论区 */
.saySthView {
    padding: 10rpx;
    background-color: #141414;
    line-height: 45px;
    border-top: solid 1px #232323;
    color: white;
    height: 90rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.saySth {
    font-size: 12pt;
    text-align: left;
    margin-left: 10rpx;
}

.comment-end{
  width:100%;
  text-align:center;
  font-size:10pt;
  color: #a1a1a1;
  margin: 20rpx 0rpx;
}

.comment-start{
  width:100vw;
  height: 60rpx;
  text-align: center;
  color: white;
  font-size: 10pt;
  background: #141414;
  display: flex;
  justify-content: center;
  align-items: center;
}

.close{
  width: 60rpx;
  height: 60rpx;
  position: fixed;
  right: 30rpx;
  top: -4rpx;
}

.lang-version{
  position: fixed;
  right: 10rpx;
  top: 10rpx;
  font-weight: 400;
  color: #f8f8f8;
  font-size: 14pt;
  font-family: FangSong;
  opacity:0.3;
}